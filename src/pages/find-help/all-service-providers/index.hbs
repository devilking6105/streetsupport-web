<div class="block block--breadcrumbs">
  <div class="container">
    <ol class="breadcrumbs__list">
      <li class="breadcrumbs__item"><a href="/">Home</a></li>
      <li class="breadcrumbs__item"><a href="/find-help/">Find Help</a></li>
      <li class="breadcrumbs__item">Full Listing</li>
    </ol>
  </div>
</div>

{{> no-js}}

{{> all-organizations/header-form showSearch="true" }}
{{> all-organizations/view-tabs listSelected="true" }}

<div class="block block--cards">
  <div class="container">
    <div class="block__content">
      <!-- ko if: hasOrgs -->
      <!-- ko ifnot: postcodeRetrievalIssue -->
      <!-- ko if: hasClientGroupFilters -->
      <div class="card-sort">
        <span class="card-sort__title">Filter for:</span>
        <div data-bind="foreach: clientGroupFilters">
          <button class="btn btn--brand-p btn--togglable" data-bind="click: click, css: { 'is-selected': isSelected }">
            <span class="btn__text" data-bind="text: name"></span>
          </button>
        </div>
      </div>
      <!-- /ko -->
      {{> all-organizations/sort }}
      <div data-bind="foreach: orgsToDisplay">
          <article class="card card--brand-h card--grid-1-of-3" data-bind="attr: { 'data-cg': clientGroupKeys }">
            <div class="card__title">
              <a data-bind="attr: { href: href } ">
                <h1 class="h2" data-bind="text: name"></h1>
              </a>
              <p data-bind="html: synopsis"></p>
            </div>
            <div class="card__details">
              <p class="card__details__description" data-bind="text: distanceDescription"></p>
              <a class="card__details__link" data-bind="attr: { href: href } ">More Information</a>
            </div>
          </article>
      </div>
      <!-- /ko -->
      <!-- /ko -->
      <!-- ko ifnot: hasOrgs -->
      <!-- ko if: postcode -->
      <p>Sorry, there are no organizations listed near your postcode, please try again.</p>
      <!-- /ko -->
      <p>If you know of local organizations that could be included, please use our <a href="/register">registration form</a>.</p>
      <!-- /ko -->
      <!-- ko if: postcodeRetrievalIssue -->
      <p>Sorry, there was a problem with your postcode, please try an alternative postcode nearby.</p>
      <!-- /ko -->
    </div>
  </div>
</div>

<div id="spin"></div>
